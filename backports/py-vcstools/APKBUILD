# Maintainer:
pkgname=py-vcstools
_pkgname=vcstools
pkgver=0.1.40
pkgrel=2
pkgdesc="Python library for interacting with various VCS systems"
url="https://pypi.python.org/pypi/vcstools/"
arch="all"
license="BSD-3-Clause"
depends="py-yaml py-dateutil"
makedepends="python2-dev python3-dev py-setuptools git"
subpackages="py2-${pkgname#py-}:_py2 py3-${pkgname#py-}:_py3"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python2 setup.py build
	python3 setup.py build
}

check() {
	cd "$builddir"
	python2 setup.py check
	python3 setup.py check
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	depends="${depends//py-/py2-}"
	_py python2
}

_py3() {
	depends="${depends//py-/py3-}"
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}
sha512sums="535dfc916e4218f853158dfb774aeb6ba54fc4d38096db96d47c4de2e77e7df74504e1b11be229bbf2fea8fe28c359e3b976c254364e04cf63d2ebd1221da650  vcstools-0.1.40.tar.gz"
