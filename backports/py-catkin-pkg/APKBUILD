# Maintainer:
pkgname=py-catkin-pkg
_pkgname=catkin_pkg
pkgver=0.4.5
pkgrel=1
pkgdesc="Library for retrieving information about catkin packages"
url="https://pypi.python.org/pypi/catkin_pkg/"
arch="all"
license="BSD-3-Clause"
depends="py-argparse py-docutils py-dateutil py-parsing"
makedepends="python2-dev python3-dev py-setuptools"
subpackages="py2-${pkgname#py-}:_py2 py3-${pkgname#py-}:_py3"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python2 setup.py build
	python3 setup.py build
}

check() {
	cd "$builddir"
	python2 setup.py check
	python3 setup.py check
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	depends="${depends//py-/py2-}"
	_py python2
}

_py3() {
	depends="${depends//py-/py3-}"
	_py python3
}

_py() {
	local python="$1"
	pkgdesc="$pkgdesc (for $python)"
	depends="$depends $python"
	install_if="$pkgname=$pkgver-r$pkgrel $python"

	cd "$builddir"
	$python setup.py install --prefix=/usr --root="$subpkgdir"
}

sha512sums="e9c00c751c4713fab079f6862aa072df892818eb7368b16aff52b1a60af7ab58625303c50cd2df98cfd59cd3744054a2e114dc16fe235a9ae8a781fa8e98fd9a  catkin_pkg-0.4.5.tar.gz"
